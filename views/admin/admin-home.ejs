<html>

<head>
    <title>Angular 2 QuickStart</title>
    <!-- 1. Load libraries -->
    <script src="/javascripts/node_modules/angular2/bundles/angular2-polyfills.js"></script>
    <script src="/javascripts/node_modules/systemjs/dist/system.src.js"></script>
    <script src="/javascripts/node_modules/rxjs/bundles/Rx.js"></script>
    <script src="/javascripts/node_modules/angular2/bundles/angular2.dev.js"></script>
    <!-- 2. Configure SystemJS -->
    <script>
    System.config({
        packages: {
            app: {
                format: 'register',
                defaultExtension: 'js'
            }
        }
    });
    System.import('/javascripts/app/boot.js')
        .then(null, console.error.bind(console));
    </script>
</head>
<!-- 3. Display the application -->

<body>
    <my-app>Loading...</my-app>
</body>

</html>
